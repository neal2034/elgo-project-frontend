{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "target": "ES2018",
    "module": "CommonJS",
    "paths" : {
      "@config/*" : ["./src/renderer/config/*"],
      "@pages/*" : ["./src/renderer/pages/*"],
      "@imgs/*" : ["./src/renderer/assets/imgs/*"],
      "@components/*" : ["./src/renderer/components/*"],
      "@store/*": ["./src/renderer/store/*"],
      "@slice/*" : ["./src/renderer/store/slice/*"],
      "@home/*" : ["./src/home/*"]

    },
    "lib": [
      "dom",
      "esnext"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "native",
    "resources"
  ],
  "include": [
    "src/main",
    "src/renderer"
  ]
}
